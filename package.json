{
  "name": "ledger",
  "version": "0.0.1",
  "description": "Ledger API",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"(src|tests)/**/*.ts\"",
    "start:api": "NODE_ENV=production node dist/src/apps/api",
    "start:api:dev": "nest start --entryFile src/apps/api --watch",
    "start:api:debug": "nest start --entryFile src/apps/api --debug --watch",
    "start:api:debug:docker": "npm i; npm run migration:init-db; nest start --entryFile src/apps/api --debug --watch",
    "start:api:prod": "NODE_ENV=production; node dist/knex-init-db; npm run migration:run; node dist/src/apps/api",
    "start:processing": "NODE_ENV=production node dist/src/apps/processing",
    "start:processing:dev": "nest start --entryFile src/apps/processing --watch",
    "start:processing:debug": "nest start --entryFile src/apps/processing --debug --watch",
    "start:processing:debug:docker": "npm i; npm run migration:init-db; nest start --entryFile src/apps/processing --debug --watch",
    "start:processing:prod": "NODE_ENV=production; node dist/knex-init-db; npm run migration:run; node dist/src/apps/processing",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:unit": "jest -c jest.unit.config.js --passWithNoTests",
    "test:e2e": "jest -c jest.e2e.config.js --runInBand --forceExit --passWithNoTests",
    "test": "npm run test:unit",
    "docker:local": "docker-compose up --build --remove-orphans",
    "migration:init-db": "npm run build; node dist/knex-init-db; npm run migration:run",
    "migration:create": "npx knex migrate:make -x ts",
    "migration:run": "npx knex migrate:latest",
    "migration:rollback": "npx knex migrate:rollback",
    "docker:build": "./scripts/docker-build-server.sh"
  },
  "dependencies": {
    "@nestjs/bull": "^10.1.1",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.3.7",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.7",
    "@nestjs/platform-express": "^10.3.7",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/swagger": "^7.3.1",
    "@willsoto/nestjs-prometheus": "^6.0.0",
    "bull": "^4.12.2",
    "cache-manager-ioredis": "^2.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "generate-password": "^1.7.1",
    "knex": "^3.1.0",
    "loadtest": "^8.0.9",
    "module-alias": "^2.2.3",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "pg": "^8.11.5",
    "prom-client": "^15.1.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.7",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.5",
    "@types/pg": "^8.11.4",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.4.4"
  },
  "_moduleAliases": {
    "@application": "dist/application",
    "@config": "dist/config",
    "@domain": "dist/domain",
    "@infrastructure": "dist/infrastructure",
    "@libs": "dist/libs"
  }
}
